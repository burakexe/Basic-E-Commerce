@model List<Tekno.MODEL.Entity.Order>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <section class="panel-heading">
                <p class="h3">
                    Siparişler Sayfası

                    <input type="button" class="btn btn-danger pull-right" value="Geri Dön" onclick="history.back()">
                    <a href="@Url.Action("Add","Order")" class="btn btn-success pull-right">Yeni Sipariş Ekle</a>
                </p>


            </section>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Kullanıcı ID</th>
                        <th>Kullanıcı Adı</th>
                        <th>Ürün</th>

                        <th>Toplam Ürün Fiyatı</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.AppUserID</td>
                        <td>@item.Name</td>
                        <td>@item.OrderDetails</td>

                        <td>@item.TotalProductPrice</td>
                        <td>
                            @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @Class = "btn btn-danger" })
                            @Html.ActionLink("Güncelle", "Edit", new { id = item.ID }, new { @Class = "btn btn-warning" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>