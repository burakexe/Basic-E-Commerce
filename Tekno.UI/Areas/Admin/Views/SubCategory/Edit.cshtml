@model Tekno.MODEL.Entity.SubCategory
@{
    ViewBag.Title = "Edit SubCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-body">
            <div class="col-lg-12">

                <form role="form" method="post" action="/Admin/SubCategory/Edit">
                    @Html.HiddenFor(x => x.ID)
                    <label>@Model.ID</label>
                    <div class="form-group">
                        <label>AltKategori Adı</label>
                        @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Kategori Seçin</label>
                        <select name="CategoryID" class="form-control">
                            <option>Kategori Seçiniz</option>
                            @foreach (var item in TempData["cs"] as IEnumerable<Tekno.MODEL.Entity.Category>)
                            {

                                <option value="@item.ID">@item.Name</option>
                            }
                        </select>


                    </div>


                    <label class="col-lg-12 control-label">Description</label>
                    <div class="control-label">
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                    </div>

                    <div class="panel-default">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <input type="button" class="btn btn-danger" value="Geri Dön" onclick="history.back()">
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

