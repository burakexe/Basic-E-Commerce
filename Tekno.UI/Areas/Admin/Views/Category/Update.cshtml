@model Tekno.MODEL.Entity.Category
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Update Category</h3>
    </div>

    <div class="panel-body">
        @using (Html.BeginForm("Update", "Category", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.ID)
            <div class="form-group">
                <label>Kategori İsmi</label>
                @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Açıklama</label>
                @Html.TextBoxFor(x => x.Description, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success">Güncelle</button>

            <input type="button" class="btn btn-danger" value="Geri Dön" onclick="history.back()">

        }
    </div>
</div>