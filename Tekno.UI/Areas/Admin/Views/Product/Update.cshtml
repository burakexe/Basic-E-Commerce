@model Tekno.MODEL.Entity.Product

@{
    ViewBag.Title = "Update Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

<div class="panel">
    <div class="panel-heading">
        <h3>Product Update</h3>
    </div>

    <div class="panel-body">
        @using (Html.BeginForm("Update", "Product", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.ID)
            <div class="form-group">
                <label>Ürün Adı</label>
                @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Stok Miktarı</label>
                @Html.TextBoxFor(x => x.UnitsInStock, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.UnitsInStock, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Ürün Fiyatı</label>
                @Html.TextBoxFor(x => x.Price, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Price, null, new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success">Güncelle</button>

            <input type="button" class="btn btn-danger" value="Geri Dön" onclick="history.back()">

        }
    </div>
</div>