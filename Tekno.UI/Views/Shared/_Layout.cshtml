<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>Teknoroma E-Store</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/FlatAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/FlatAdmin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/FlatAdmin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!--<link href="css/navbar-fixed-top.css" rel="stylesheet">-->
    <!-- Custom styles for this template -->
    <link href="/Content/FlatAdmin/css/style.css" rel="stylesheet">
    <link href="/Content/FlatAdmin/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="full-width">

    <section id="container" class="">
        <!--header start-->
        <header class="header white-bg">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!--logo start-->
                <a href="index.html" class="logo">Teknoroma <span>E-Store</span></a>
                <!--logo end-->
                <div class="horizontal-menu navbar-collapse collapse ">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("HomePage", "Index", "Home")</li>
                        <li>@Html.ActionLink("Products", "Index", "Product")</li>
                        <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                        <li>@Html.ActionLink("Abous Us", "About", "Home") </li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>

                    </ul>

                </div>
                <div class="top-nav ">
                    <ul class="nav pull-right top-menu">

                        <li><a href="@Url.Action("MyCart","Product")" class="btn btn-info btn-lg"><span class="glyphicon glyphicon-shopping-cart"></span>MyBasket</a></li>
                        <li>@Html.ActionLink("Login", "Login", "AppUser", null, new { @style = "background-color:salmon" })</li>





                        <!-- user login dropdown start-->
                        <!-- user login dropdown end -->
                    </ul>
                </div>

            </div>

        </header>
        <!--header end-->
        <!--sidebar start-->
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                @RenderBody()
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                2013 &copy; FlatLab by VectorLab.
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/FlatAdmin/js/jquery.js"></script>
    <script src="/Content/FlatAdmin/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/Content/FlatAdmin/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/Content/FlatAdmin/js/jquery.scrollTo.min.js"></script>
    <script src="/Content/FlatAdmin/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/Content/FlatAdmin/assets/jquery-ui/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="/Content/FlatAdmin/js/jquery.ui.touch-punch.min.js"></script>
    <script src="/Content/FlatAdmin/js/jquery.customSelect.min.js"></script>

    <script src="/Content/FlatAdmin/js/respond.min.js"></script>


    <!--common script for all pages-->
    <script src="/Content/FlatAdmin/js/common-scripts.js"></script>

    <script src="/Content/FlatAdmin/js/sliders.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            $(function () {
                $('select.styled').customSelect();
            });
        });


    </script>

</body>
</html>
